/**news.wxss**/
.scroll-container {
	width: 100%;
	height: auto;
}

.banner-container {
   width: auto;
   height: 400rpx;
}

.banner-img {
	width: 100%;
	height: 450rpx;
}

.horizon-nav {
	height: 90rpx;
	width: 100%;
	border-bottom: 1px solid #eee;
	margin-bottom: 20rpx;
	
    overflow: hidden;
    line-height: 90rpx;
	white-space: nowrap;
    font-size: 36rpx;
	background-color: #fff;
	z-index: 1 
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  color: transparent;
}

.nav-item {
	width:auto;
    display: inline-block;
	text-align: center;
	color: #BDBDBD;
	margin-left: 30rpx;
	margin-right: 20rpx;
}

.nav-item.active {
	font-size: 40rpx;
	font-weight: bold;
	color: #000;
}

.nav-fixed{
	position: sticky;
	left: 0;
	top: 0;
}

.announcement-item {
	width: auto;
	height: 160rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
	margin-left: 25rpx;
	margin-right: 25rpx;
	border-bottom: 1px solid #BDBDBD;
	/*border: 1rpx solid*/
}

.announcement-item .title { 
	height: 100rpx;
	display: block;
	display:  -webkit-box;
	position: relative;
	margin-top: 5rpx;
	margin-left: 20rpx;
	margin-right:20rpx;
	font: 40rpx bold;
	overflow: hidden;
	text-overflow: ellipsis;
	 word-break: break-all;
	-webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
	line-height: 50rpx;
	/*border: 1rpx solid*/
}

.announcement-item .time {
	display: block;
	float: left;
	margin-left: 20rpx;
	font-size: 30rpx;
	color: #444;
	
	/*border: 1rpx solid*/
}

.news-item {
	width: auto;
	height: 170rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
	margin-left: 25rpx;
	margin-right: 25rpx;
	border-bottom: 1px solid #BDBDBD;
}

.news-img {
	width: 230rpx;
	height: 150rpx;
	float: left ;
}

.title-time-comment {
	float:right;
	height: 150rpx;
	width: 450rpx;
}


.title-time-comment .news-title {
	height: 70%;
	display:  -webkit-box;
	position: relative;
	font: 40rpx bold;
	overflow: hidden;
	text-overflow: ellipsis;
	 word-break: break-all;
	-webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
	margin-top: 5rpx;
	line-height: 50rpx;
}

.title-time-comment .time-comment {
	position: relative;
	font-size: 25rpx;
	margin-top: 5rpx;
}

.time-comment .news-time {
}

.time-comment .news-comment {
	float: right;
	margin-right: 50rpx;
}







